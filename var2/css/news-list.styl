.shortNewsBlock
    width 100%
    display flex
    align-items: stretch
    margin: 20px 0

    .shortNewsBlockLink
        text-decoration none
        overflow hidden
        border-radius 40px
        display block
        height: 100%
        width 340px
        overflow hidden
        margin 10px 20px

        img
            width 340px
            height 340px
            // height auto
            overflow-y hidden
            object-fit cover
        p
            padding 20px
            width 340px
            color #fff
            // font-family Roboto
            font-style normal
            font-weight normal
            font-size 24px
            line-height: 28px;
    &:nth-child(even) .shortNewsBlockLink
        background-color: #BFCECE
    &:nth-child(odd) .shortNewsBlockLink
        background-color: #CE9A98
    &:hover
        opacity: 0.6